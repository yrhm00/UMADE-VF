{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019"],
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "app.config.ts", "jest.setup.ts"],
  "exclude": ["node_modules", "babel.config.js"]
}
